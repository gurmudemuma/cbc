{
  "name": "coffee-export-consortium",
  "version": "2.0.0",
  "description": "Enterprise Hyperledger Fabric Coffee Export Consortium",
  "main": "index.js",
  "scripts": {
    "start": "docker-compose -f docker-compose.production.yml up -d",
    "stop": "docker-compose -f docker-compose.production.yml down",
    "deploy": "./scripts/deploy.sh",
    "logs": "docker-compose -f docker-compose.production.yml logs -f",
    "clean": "docker-compose -f docker-compose.production.yml down -v && docker system prune -f",
    "health": "docker-compose -f docker-compose.production.yml ps",
    "test": "npm run test:apis && npm run test:frontend && npm run test:chaincode",
    "test:apis": "cd apis && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:chaincode": "cd chaincode/coffee-export && go test -v",
    "test:coverage": "cd apis && npm run test:coverage",
    "lint": "npm run lint:apis && npm run lint:frontend",
    "lint:apis": "cd apis && npm run lint",
    "lint:frontend": "cd frontend && npm run lint"
  },
  "keywords": [
    "hyperledger-fabric",
    "blockchain",
    "coffee-export",
    "consortium",
    "enterprise"
  ],
  "author": "Coffee Export Consortium",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "docker": ">=20.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "pg": "^8.16.3"
  }
}
