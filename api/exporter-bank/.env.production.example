PORT=3001
NODE_ENV=production

# SECURITY: CRITICAL - Generate unique, strong JWT secret for production
# Use: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=8h

# Fabric Network Configuration
CHANNEL_NAME=coffeechannel
CHAINCODE_NAME=coffee-export
MSP_ID=ExporterBankMSP
ORG_NAME=exporterbank

# Security Configuration (Production)
BCRYPT_ROUNDS=14
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_TIME=1800000

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Logging
LOG_LEVEL=warn
ENABLE_REQUEST_LOGGING=false

# Rate Limiting (Production)
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=3
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=50