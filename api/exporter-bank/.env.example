# =============================================================================
# Exporter Bank API - Environment Configuration
# =============================================================================

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# Security & Authentication
JWT_SECRET=exporter-bank-secret-key-change-in-production-min-32-characters
JWT_EXPIRATION=24h
REFRESH_TOKEN_EXPIRATION=7d
ENCRYPTION_KEY=change-this-to-32-byte-hex-key-for-aes-256
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS and Frontend
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Organization Configuration
ORGANIZATION_ID=exporterbank
ORGANIZATION_NAME=ExporterBank
MSP_ID=ExporterBankMSP
PEER_ENDPOINT=peer0.exporterbank.coffee-export.com:7051

# Fabric Network Configuration
CHANNEL_NAME=coffeechannel
CHAINCODE_NAME=coffee-export
CHAINCODE_NAME_EXPORT=coffee-export
CHAINCODE_NAME_USER=user-management

# Paths (relative to this API directory)
CONNECTION_PROFILE_PATH=../../network/organizations/peerOrganizations/exporterbank.coffee-export.com/connection-exporterbank.json
WALLET_PATH=./wallet
ADMIN_CERT_PATH=../../network/organizations/peerOrganizations/exporterbank.coffee-export.com/users/Admin@exporterbank.coffee-export.com/msp/signcerts/cert.pem
ADMIN_KEY_PATH=../../network/organizations/peerOrganizations/exporterbank.coffee-export.com/users/Admin@exporterbank.coffee-export.com/msp/keystore/priv_sk

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_PORT=8080
IPFS_GATEWAY=https://ipfs.io

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@coffeeexport.com

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg

# WebSocket
WEBSOCKET_ENABLED=true

# Development
DEBUG=false
ENABLE_REQUEST_LOGGING=true
ENABLE_HEALTH_CHECK=true
ENABLE_API_DOCS=true