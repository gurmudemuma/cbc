# =============================================================================
# Custom Authorities API - Environment Configuration
# =============================================================================

# Server Configuration
PORT=3005
NODE_ENV=development
LOG_LEVEL=info

# Security & Authentication
JWT_SECRET=custom-dev-secret-change-in-production-use-openssl-rand-base64-64
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=change-this-to-32-byte-hex-key-for-aes-256
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# CORS and Frontend
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Organization Configuration
ORGANIZATION_ID=custom-authorities
ORGANIZATION_NAME=Custom Authorities
MSP_ID=CustomAuthoritiesMSP
PEER_ENDPOINT=peer0.custom-authorities.coffee-export.com:11051

# Fabric Network Configuration
CHANNEL_NAME=coffeechannel
CHAINCODE_NAME=coffee-export
CHAINCODE_NAME_EXPORT=coffee-export
CHAINCODE_NAME_USER=user-management

# Paths (relative to this API directory)
CONNECTION_PROFILE_PATH=../../network/organizations/peerOrganizations/custom-authorities.coffee-export.com/connection-custom-authorities.json
WALLET_PATH=./wallet
ADMIN_CERT_PATH=../../network/organizations/peerOrganizations/custom-authorities.coffee-export.com/users/Admin@custom-authorities.coffee-export.com/msp/signcerts/cert.pem
ADMIN_KEY_PATH=../../network/organizations/peerOrganizations/custom-authorities.coffee-export.com/users/Admin@custom-authorities.coffee-export.com/msp/keystore/priv_sk

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_PORT=8080
IPFS_GATEWAY=https://ipfs.io

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@coffeeexport.com

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg

# WebSocket
WEBSOCKET_ENABLED=true

# Development
DEBUG=false
ENABLE_REQUEST_LOGGING=true
ENABLE_HEALTH_CHECK=true
ENABLE_API_DOCS=true
# IPFS CONFIGURATION
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_PORT=8080
IPFS_GATEWAY=https://ipfs.io

# DATABASE SETTINGS (Required for pre-registration system)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coffee_export_db
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# EMAIL SETTINGS (Required for renewal reminders)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=notifications@ecta.gov.et
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@ecta.gov.et
ECTA_ADMIN_EMAIL=admin@ecta.gov.et

# PRE-REGISTRATION SYSTEM SETTINGS
RENEWAL_REMINDERS_ENABLED=false
AUDIT_RETENTION_DAYS=2555
ENHANCED_AUDIT_ENABLED=true
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,jpg,jpeg,png

# Redis (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
