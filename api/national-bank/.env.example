PORT=3002
NODE_ENV=development

# SECURITY: Generate a strong, unique JWT secret for production
# Use: openssl rand -base64 64
JWT_SECRET=national-bank-dev-secret-change-in-production-use-openssl-rand-base64-64
JWT_EXPIRES_IN=24h

# Fabric Network Configuration
CHANNEL_NAME=coffeechannel
CHAINCODE_NAME=coffee-export
MSP_ID=NationalBankMSP
ORG_NAME=nationalbank
FABRIC_NETWORK_PATH=../../network

# Security Configuration
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY=https://ipfs.io

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@coffeeexport.com
