# =============================================================================
# Exporter Portal API - Environment Configuration
# External exporter interface for creating export requests
# =============================================================================

# Server Configuration
PORT=3006
NODE_ENV=development
LOG_LEVEL=info

# Authentication & JWT Validation
# Note: Exporter Portal users are authenticated by National Bank
# This API validates JWTs issued by National Bank
JWT_SECRET=national-bank-jwt-secret-shared-key-change-in-production-min-32
JWT_EXPIRES_IN=24h
NATIONAL_BANK_API_URL=http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=10

# CORS and Frontend
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE_MB=20
ALLOWED_FILE_TYPES=application/pdf,image/jpeg,image/png,image/jpg,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
UPLOAD_PATH=./uploads
MAX_FILES_PER_REQUEST=5

# IPFS Configuration (for document storage)
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_PORT=8080
IPFS_GATEWAY=https://ipfs.io

# Database Configuration (for local portal data, not user management)
# User management is handled by National Bank PostgreSQL
PORTAL_DB_TYPE=sqlite
PORTAL_DB_PATH=./portal.db

# Blockchain Integration (for submitting export requests)
SUBMIT_TO_CONSORTIUM=true
CONSORTIUM_ENDPOINT=http://localhost:3001/consortium

# Email Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@exporterportal.com

# Business Configuration
SUPPORTED_COFFEE_TYPES=arabica,robusta,specialty,organic
SUPPORTED_CURRENCIES=USD,EUR,KES,UGX,TZS
DEFAULT_CURRENCY=USD
MAX_EXPORT_VALUE_USD=1000000

# Development
DEBUG=false
ENABLE_REQUEST_LOGGING=true
ENABLE_HEALTH_CHECK=true
ENABLE_API_DOCS=true