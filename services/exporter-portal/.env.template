# =============================================================================
# Exporter Portal API - Environment Configuration Template
# =============================================================================
# EXTERNAL ENTITY - Uses Fabric SDK (no peer node)
# Coffee exporters submit export requests through this portal
# =============================================================================

# APPLICATION SETTINGS
PORT=3007
NODE_ENV=development
LOG_LEVEL=info

# SECURITY & AUTHENTICATION (Shared across all CBC services for SSO)
JWT_SECRET=cbc-shared-jwt-secret-change-in-production-min-64-chars-for-security
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-for-aes-256-encryption-change-this

# CORS origin (comma-separated list of allowed origins, or * for all)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# HYPERLEDGER FABRIC SDK CONFIGURATION
# Exporter Portal uses Commercial Bank's identity (no separate peer/MSP)
# Exporters are external users authenticated via JWT, not Fabric identities
# This allows unlimited exporters without creating individual Fabric identities
ORGANIZATION_ID=commercialbank
ORGANIZATION_NAME=CommercialBank
MSP_ID=CommercialBankMSP
PEER_ENDPOINT=peer0.commercialbank.coffee-export.com:7051
CHANNEL_NAME=coffeechannel
CHAINCODE_NAME_EXPORT=coffee-export
CHAINCODE_NAME_USER=user-management

# Connection Profile (uses Commercial Bank's connection)
CONNECTION_PROFILE_PATH=../../network/organizations/peerOrganizations/commercialbank.coffee-export.com/connection-commercialbank.json
WALLET_PATH=./wallet

# Fabric Identity (uses Commercial Bank's admin identity)
FABRIC_USER_ID=admin
FABRIC_USER_TYPE=admin

# FILE UPLOAD SETTINGS
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# MONITORING
MONITORING_ENABLED=true
METRICS_PORT=9097

# EXTERNAL API ENDPOINTS (for status checking)
COMMERCIAL_BANK_API=http://localhost:3001
ECX_API=http://localhost:3006
ECTA_API=http://localhost:3003

# IPFS CONFIGURATION
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_PORT=8080
IPFS_GATEWAY=https://ipfs.io

# PostgreSQL Database Configuration
# ECTA Pre-Registration System
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coffee_export_db
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# EMAIL SETTINGS (Required for renewal reminders)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=notifications@ecta.gov.et
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@ecta.gov.et
ECTA_ADMIN_EMAIL=admin@ecta.gov.et

# REDIS (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# PRE-REGISTRATION SYSTEM SETTINGS
RENEWAL_REMINDERS_ENABLED=false
AUDIT_RETENTION_DAYS=2555
ENHANCED_AUDIT_ENABLED=true
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,jpg,jpeg,png
