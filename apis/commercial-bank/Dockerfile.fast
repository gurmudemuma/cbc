# syntax=docker/dockerfile:1
FROM node:18-alpine

WORKDIR /app

# Copy only what's needed
COPY package*.json ./
COPY tsconfig.json ./

# Fast install
RUN --mount=type=cache,target=/root/.npm npm ci --only=production --silent --no-audit

# Copy shared dependencies
COPY ../shared ../shared

# Copy source
COPY src ./src

EXPOSE 3001
CMD ["npm", "start"]
