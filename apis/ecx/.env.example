# ECX API Configuration
PORT=3006
NODE_ENV=development

# Organization Details
ORGANIZATION_ID=ecx
ORGANIZATION_NAME=ECX
MSP_ID=ECXMSP

# Fabric Network Configuration
CHANNEL_NAME=coffeechannel
CHAINCODE_NAME=coffee-export
PEER_ENDPOINT=peer0.ecx.coffee-export.com:12051
PEER_HOST_ALIAS=peer0.ecx.coffee-export.com

# Connection Profile
CONNECTION_PROFILE_PATH=../../network/organizations/peerOrganizations/ecx.coffee-export.com/connection-ecx.json

# Wallet Configuration
WALLET_PATH=./wallet

# Identity
USER_ID=ecxAdmin
USER_CERT_PATH=../../network/organizations/peerOrganizations/ecx.coffee-export.com/users/Admin@ecx.coffee-export.com/msp/signcerts/cert.pem
USER_KEY_PATH=../../network/organizations/peerOrganizations/ecx.coffee-export.com/users/Admin@ecx.coffee-export.com/msp/keystore/priv_sk

# JWT Configuration
JWT_SECRET=your-ecx-jwt-secret-change-in-production
JWT_EXPIRES_IN=24h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# IPFS Configuration
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http
IPFS_GATEWAY_PORT=8080
IPFS_GATEWAY=https://ipfs.io

# DATABASE SETTINGS (Required for pre-registration system)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coffee_export_db
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# EMAIL SETTINGS (Required for renewal reminders)
EMAIL_ENABLED=true
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=notifications@ecta.gov.et
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@ecta.gov.et
ECTA_ADMIN_EMAIL=admin@ecta.gov.et

# PRE-REGISTRATION SYSTEM SETTINGS
RENEWAL_REMINDERS_ENABLED=false
AUDIT_RETENTION_DAYS=2555
ENHANCED_AUDIT_ENABLED=true
MAX_DOCUMENT_SIZE_MB=10
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx,jpg,jpeg,png

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/ecx-api.log

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
