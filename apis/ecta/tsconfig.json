{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noPropertyAccessFromIndexSignature": false,
    "types": [
      "node",
      "../shared/types/express"
    ]
  },
  "include": [
    "src/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__/**",
    "../shared/**/*.test.ts",
    "../shared/test-setup.ts"
  ]
}