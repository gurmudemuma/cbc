  "item": [
    {
      "name": "Exporter Bank",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"exporter1\",\n  \"password\": \"password123\",\n  \"email\": \"exporter1@bank.com\"\n}"
            },
            "url": {
              "raw": "{{exporter_base_url}}/api/auth/register",
              "host": ["{{exporter_base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"exporter_token\", jsonData.data.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"exporter1\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{exporter_base_url}}/api/auth/login",
              "host": ["{{exporter_base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Create Export",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"export_id\", jsonData.data.exportId);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{exporter_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"exporterName\": \"ABC Coffee Exporters\",\n  \"coffeeType\": \"Arabica Premium\",\n  \"quantity\": 5000,\n  \"destinationCountry\": \"United States\",\n  \"estimatedValue\": 75000\n}"
            },
            "url": {
              "raw": "{{exporter_base_url}}/api/exports",
              "host": ["{{exporter_base_url}}"],
              "path": ["api", "exports"]
            }
          }
        },
        {
          "name": "Get All Exports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{exporter_token}}"
              }
            ],
            "url": {
              "raw": "{{exporter_base_url}}/api/exports",
              "host": ["{{exporter_base_url}}"],
              "path": ["api", "exports"]
            }
          }
        },
        {
          "name": "Get Export by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{exporter_token}}"
              }
            ],
            "url": {
              "raw": "{{exporter_base_url}}/api/exports/{{export_id}}",
              "host": ["{{exporter_base_url}}"],
              "path": ["api", "exports", "{{export_id}}"]
            }
          }
        },
        {
          "name": "Get Export History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{exporter_token}}"
              }
            ],
            "url": {
              "raw": "{{exporter_base_url}}/api/exports/{{export_id}}/history",
              "host": ["{{exporter_base_url}}"],
              "path": ["api", "exports", "{{export_id}}", "history"]
            }
          }
        },
        {
          "name": "Complete Export",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{exporter_token}}"
              }
            ],
            "url": {
              "raw": "{{exporter_base_url}}/api/exports/{{export_id}}/complete",
              "host": ["{{exporter_base_url}}"],
              "path": ["api", "exports", "{{export_id}}", "complete"]
            }
          }
        }
      ]
    },
